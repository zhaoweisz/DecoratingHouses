<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="yyk.decoratinghouses.fragment.MyFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:title="装修计算器"
        app:titleTextColor="@color/colorToolTitle">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/qgfl_setting"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/list_bg">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_build_holo_blue_bright_24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="2dp"
                    android:text="轻工辅料参数设置"
                    android:textSize="16sp"
                    android:layout_marginLeft="72dp"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <View
                android:layout_width="72dp"
                android:layout_height="1dp"
                android:background="#FFF"/>
            <RelativeLayout
                android:id="@+id/zc_setting"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/list_bg">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_local_dining_holo_blue_bright_24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="2dp"
                    android:text="主材参数设置"
                    android:textSize="16sp"
                    android:layout_marginLeft="72dp"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <View
                android:layout_width="72dp"
                android:layout_height="1dp"
                android:background="#FFF"/>
            <RelativeLayout
                android:id="@+id/jj_setting"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/list_bg">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_weekend_holo_blue_bright_24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="2dp"
                    android:text="家居参数设置"
                    android:textSize="16sp"
                    android:layout_marginLeft="72dp"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <View
                android:layout_width="72dp"
                android:layout_height="1dp"
                android:background="#FFF"/>
            <RelativeLayout
                android:id="@+id/dq_setting"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/list_bg">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_settings_input_svideo_holo_blue_bright_24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="2dp"
                    android:text="电器参数设置"
                    android:textSize="16sp"
                    android:layout_marginLeft="72dp"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>
